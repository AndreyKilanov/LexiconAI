# App Settings
APP_ENV=development
LOG_LEVEL=INFO

# Database Settings
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=lexicon
DB_HOST=db
DB_PORT=5432
# Полный URL (если указан, имеет приоритет над отдельными полями выше)
# DATABASE_URL=postgresql+asyncpg://postgres:postgres@db:5432/lexicon

# Service Ports
APP_PORT=8000
NGINX_PORT=8000

# Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
ADMIN_CHAT_ID=your_chat_id

# LLM API
# Для бесплатного использования можно использовать Groq (https://console.groq.com/)
# или OpenRouter (https://openrouter.ai/)
LLM_BASE_URL=https://api.groq.com/openai/v1
LLM_API_KEY=your_groq_api_key
LLM_MODEL=llama-3.3-70b-versatile
LLM_TEMPERATURE=0.3
